@using C_Entidades;
@model  IEnumerable<Categoria>
@{
    ViewBag.Title = "Actualización de categoría";
    Layout = "~/Views/M_BasicI.cshtml";
}
<div class="row">
    <h1 class="page-header">Actualización de categoría</h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("SubMantenimientos", "IntranetInicio")">Sub mantenimientos</a></li>        
        <li class="active">Actualización de categoria</li>
    </ol>
    @if (ViewBag.mensaje != null)
    {
        if (ViewBag.identificador == 1)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>¡Opps!</strong> @ViewBag.mensaje
            </div>
        }
        else if (ViewBag.identificador == 2)
        {
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>¡Ojo!</strong> @ViewBag.mensaje
            </div>
        }
        else if (ViewBag.identificador == 3)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>¡Genial!</strong> @ViewBag.mensaje
            </div>
        }
    }
    @foreach (var c in Model)
{
    <div class="col-lg-12">
        <form method="post" action="ActualizarCategoria" enctype="multipart/form-data">
            <div class="col-lg-6">
                <input type="hidden" name="ID" value="@ViewBag.ID" />
                <div class="form-group">
                    <label>Nombre de la categoría</label>
                    <input type="text" class="form-control" name="nombre" value="@c.CategoriaNombre" placeholder="Nombre" />
                </div>
                <div class="form-group">
                    <label>Modificar icono</label>
                    <input type="file" name="fotoi" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
                </div>
            </div>
            <div class="col-lg-6">
                <label>Icono actual</label><br />
                <img class="col-md-3 col-xs-3 img-responsive thumbnail" src="/desing/Imagenes/I_Categoria/@c.CategoriaIcono" />
            </div>
        </form>
        </div>}
</div>
    