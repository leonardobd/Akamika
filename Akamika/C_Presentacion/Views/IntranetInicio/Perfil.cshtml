@{
    ViewBag.Title = "Perfil";
    Layout = "~/Views/M_BasicI.cshtml";
}<div class="row">
    <h1 class="page-header">Perfil </h1>
     <div class="col-lg-12">
         @{if (ViewBag.mensaje != null)
         {
             if (ViewBag.identificador == 1)
             {
                 <div class="alert alert-danger alert-dismissible" role="alert">
                     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                     <strong><i class="fa fa-user fa-fw"></i> ¡Ops!</strong> @ViewBag.mensaje
                 </div>
             }
             else if (ViewBag.identificador == 2)
             {
                 <div class="alert alert-warning alert-dismissible" role="alert">
                     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                     <strong>¡Alerta!</strong> @ViewBag.mensaje
                 </div>
             }
             else if (ViewBag.identificador == 3)
             {
                 <div class="alert alert-success alert-dismissible" role="alert">
                     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                     <strong>¡Perfecto!</strong> @ViewBag.mensaje
                 </div>
             }
         }
         }


         @using (Html.BeginForm("ActualizarPerfil", "IntranetInicio", FormMethod.Post, new { enctype = "multipart/form-data" }))
         {
             @Html.AntiForgeryToken()
             @Html.ValidationSummary(true)

             <div class="col-lg-6">
                 <label>Nombres</label>
                 <input type="hidden" name="txt_PersonaID" value="@Model.Persona.PersonaID" />
                 <input type="hidden" name="txt_UsuarioID" value="@Model.UsuarioID" />
                 <div class="form-group">
                     <input type="text" class="form-control" name="txt_PersonaNombres" value="@Model.Persona.PersonaNombres" placeholder="Nombres" />
                 </div>
                 <div class="form-group">
                     <label>Apellidos</label>
                     <input type="text" class="form-control" name="txt_PersonaApellidos" value="@Model.Persona.PersonaApellidos" placeholder="Apellidos" />
                 </div>
                 <div class="form-group">
                     <label>Genero</label>
                     <select name="cbo_Sexo" class="form-control">
                         <option id="0">Seleccione un genero</option>
                         <option id="M">Masculino</option>
                         <option id="F">Femenino</option>
                     </select>
                 </div>
                 <div class="form-group">
                     <label>Fecha de nacimiento</label>
                     <div class="col-md-12">
                         <div class="col-md-3">
                             <input type="number" name="txt_FechaDia" class="form-control" min="1" max="31" value="@string.Format("{0:dd}", Model.Persona.PersonaFechaNacimiento)" placeholder="día" />
                         </div>

                         <div class="col-md-3">
                             <input type="number" name="txt_FechaMes" class="form-control" min="1" max="12" value="@string.Format("{0:MM}", Model.Persona.PersonaFechaNacimiento)" placeholder="mes" />
                         </div>

                         <div class="col-md-4">
                             <input type="number" name="txt_FechaAño" class="form-control" min="1060" max="9999" value="@string.Format("{0:yyyy}", Model.Persona.PersonaFechaNacimiento)" placeholder="año" />
                         </div>
                     </div>
                 </div>
                 <div class="form-group">
                     <label>Correo</label>
                     <input type="email" class="form-control" name="txt_Correo" value="@Model.UsuarioCorreo" placeholder="Correo" />
                 </div>
                 <div class="form-group">
                     <label>Contraseña</label>
                     <input type="password" class="form-control" name="txt_Password" value="@Model.UsuarioPassw" placeholder="Contraseña" />
                 </div>
                 <div class="form-group">
                     <label>Cambiar foto</label>
                     <input type="file" name="fotoi" accept="image/*" />
                 </div>
             </div>
             <div class="col-lg-6">

                 <div class="form-group">
                     <label>Foto actual</label>
                     <img class="col-md-12 col-xs-12 img-responsive thumbnail" src="/desing/Imagenes/I_Usuario/@Model.Persona.PersonaFoto" />
                 </div>
             </div>
             <div class="form-group">
                 <input type="submit" class="btn btn-success navbar-right" value="Guardar" />
             </div>
         }
     </div>

</div>