@using C_Entidades;
@model  IEnumerable<Sesion>
@{
    ViewBag.Title = "Actualización de datos";
    Layout = "~/Views/M_BasicI.cshtml";
}
@foreach (var s in Model){
<div class="row">
    <h1 class="page-header">Actualización de datos</h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("MantenimientoCursos", "IntranetInicio")">Cursos</a></li>
        <li><a href="@Url.Action("ActualizarSesiones", "IntranetInicio", new {CursoID= ViewBag.idCurso})">Mantenimiento de sesiones</a></li>
        <li class="active">Actualización de datos</li>
    </ol>
    @if (ViewBag.mensaje != null)
    {
        if (ViewBag.identificador == 1)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>¡Opps!</strong> @ViewBag.mensaje
            </div>
        }
        else if (ViewBag.identificador == 2)
        {
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>¡Ojo!</strong> @ViewBag.mensaje
            </div>
        }
        else if (ViewBag.identificador == 3)
        {
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>¡Genial!</strong> @ViewBag.mensaje
            </div>
        }
    }

    <div class="col-lg-12">
        <form method="post" action="ModificacionSesion">
            <div class="col-lg-6">
                <input type="hidden" value="@ViewBag.idCurso" name="curso" />
                <input type="hidden" value="@ViewBag.sesionID" name="sesion" />
                <div class="form-group">
                    <label>Título de la sesión</label>
                    <input type="text" class="form-control" name="titulo" value="@s.SesionTitulo" />
                </div>
                <div class="form-group">
                    <label>Descripción</label>
                    <input type="text" class="form-control" name="descripcion" value="@s.SesionDescripcion" />
                </div>
                <div class="form-group">
                    <label>URL (Youtube)</label><br />
                    <small class="text-muted">
                    URL real: https://www.youtube.com/<b>"watch?v="</b>XreWrWGsQpg <br />
                    URL que debe ingresar: https://www.youtube.com/<b>"embed/"</b>XreWrWGsQpg
</small>
                    <input type="text" class="form-control" name="URL" value="@s.SesionVideo" />
                </div>
                <div class="form-group">
                    <label>Establecer fecha de publicación</label>
                    <input type="date" class="form-control" value="" placeholder="Fecha de publicación" />
                </div>
                <div class="form-group">
                    <label>Establecer hora de publicación</label>
                    <input type="time" class="form-control" value="" placeholder="Fecha de publicación" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="fa fa-refresh"></i>Actualizar</button>
                </div>
            </div>
            <div class="col-lg-6">
                <label>Video actual</label>
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="@s.SesionVideo" frameborder="0" allowfullscreen></iframe>
                </div>
                </div>
        </form>
    </div> 
</div>
}